{
    "app": {
        "version": "2.0.0-smart",
        "theme": "dark",
        "autosave_config": true,
        "window_size": [1200, 800]
    },
    "crawler": {
        "mode": "smart",
        "max_concurrency": 10,
        "request_timeout": 30,
        "retry": 3,
        "follow_robots": true,
        "enable_playwright": true,
        "max_depth": 10,
        "delay_range": [0.5, 1.5],
        "domain_delay": 1.0
    },
    "smart_mode": {
        "enabled": true,
        "auto_detect": true,
        "auto_switch_mode": true,
        "learn_from_patterns": true
    },
    "crawl_mode": "auto",
    "max_pages": 1000,
    "max_pages_per_domain": 500,
    "max_domains": 50,
    "checkpoint_interval": 100,
    "pagination": {
        "selector": "",
        "attribute": "href",
        "limit": 1000
    },
    "domain_crawler": {
        "enabled": false,
        "same_domain_only": true,
        "max_pages": 1000,
        "exclude_extensions": [
            ".jpg",
            ".png",
            ".jpeg",
            ".gif",
            ".svg",
            ".webp",
            ".pdf",
            ".zip",
            ".rar",
            ".7z",
            ".tar",
            ".gz",
            ".mp4",
            ".avi",
            ".mov",
            ".mp3",
            ".wav"
        ]
    },
    "login": {
        "enabled": false,
        "type": "form",
        "form_url": "",
        "username_field": "",
        "password_field": "",
        "username": "",
        "password": "",
        "cookie": ""
    },
    "selectors": {
        "data_selector": "",
        "title_selector": "",
        "content_attribute": "text"
    },
    "proxy": {
        "enabled": false,
        "rotate": true,
        "proxy_list": [],
        "proxy_api": ""
    },
    "export": {
        "export_csv": true,
        "export_json": true,
        "export_sqlite": true,
        "output_directory": "output"
    },
    "multi_domain_urls": ""
}
